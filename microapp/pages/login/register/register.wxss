/* pages/login/register/register.wxss */

.view-wrap{
  width: 100%;
  padding: 0 30rpx;
  box-sizing: border-box;
}
.view-inp-box{
  height: 100rpx;
  background: #f2f2f2;
  margin-bottom: 20rpx;
}
.view-inp-box input{
  height: 100%;
  font-size: 28rpx;
  padding: 0 20rpx 0 40rpx;
}

.view-inp-code{
  background: transparent;
}
.view-code-left{
  width: 58%;
  height: 100%;
  float: left;
  background: #f2f2f2;
  padding-left: 20rpx;
  box-sizing: border-box;
}
.view-code-left text{
  display: inline-block;
  line-height: 100rpx;
  vertical-align: middle;
}
.view-code-left input{
  width: 64%;
  display: inline-block;
  vertical-align: middle;
}
.view-inp-code button{
  width: 40%;
  height: 100%;
  line-height: 100rpx;
  float: right;
  background: #ff9800;
  color: #fff;
  font-size: 28rpx;
}


.share_radio_wrap{
  padding: 10rpx 0rpx 30rpx 0;
  color: #a2a0a0;
  font-size: 26rpx;
}
checkbox .wx-checkbox-input{
    width: 35rpx; /* 背景的宽 */
    height: 35rpx; /* 背景的高 */
    background: transparent;
    vertical-align: middle;
    margin-top: -4rpx;
    border-radius: 50%;
}
.share_radio_wrap text{
  color: #c92f23;
}

.now-login{
  background: #ff9800;
  color: #fff;
}

.view-other-login{
  padding: 30rpx 0;
  font-size: 28rpx;
}
.vie-other-left{
  display: inline-block;
}
.view-other-right{
  float: right;
}

