/* pages/mine/orderall/orderall.wxss */

.order-head-nav{
  border-bottom: 1px solid #d9d9d9;
  padding: 0 20rpx;
}
.order-nav{
  display: inline-block;
  font-size: 32rpx;
  padding: 30rpx 30rpx;
  border-bottom: 3px solid #fff;
  margin: 0 10rpx;
  position: relative;
}
.navactive{
  color: #d81e06;
  border-bottom: 3px solid #d81e06;
}
.nav-num{
  width: 30rpx;
  height: 30rpx;
  line-height: 30rpx;
  text-align: center;
  font-size: 20rpx;
  border-radius: 50%;
  border: 1px solid #d84959;
  color: #d84959;
  display: inline-block;
  position: absolute;
  right: 0;
  top: 0;
}

.order-list-box{
  margin: 20rpx 0 50rpx 0;
}
.order-time{
  font-size: 28rpx;
  padding: 20rpx 10rpx;
  color: #444;
  border-bottom: 1px solid #e8e8e8;
}
.order-time text{
  float: right;
  color: #666;
}

.order-info{
  position: relative;
  padding: 20rpx;
  min-height: 150rpx;
}
.order-info-t{
  font-size: 30rpx;
  margin-bottom: 10rpx;
}
.order-info-t-color{
  font-size: 30rpx;
  color: #999;
}
.order-img{
  margin-top: 20rpx;
}
.order-img view{
  display: inline-block;
  width: 150rpx;
  height: 150rpx;
  overflow: hidden;
  margin: 0 10rpx;
}

.order-get-time{
  border-bottom: 1px solid #e8e8e8;
}

.order-money{
  text-align: right;
  padding: 10rpx 20rpx 20rpx 0;
}

.order-btn{
  min-width: 110rpx;
  text-align: center;
  padding: 10rpx 30rpx;
  border: 1px solid #bbbbbb;
  border-radius: 40rpx;
  color: #5e5e5e;
  margin-left: 20rpx;
  display: inline-block;
  font-size: 28rpx;
  margin-top: 10rpx;
}
.order-btn-red{
  color: #fff;
  background: #e82050;
  border: 1px solid #e82050;
}




/* 接单弹框 */
.Applyalert{
  background: rgba(0, 0, 0, 0.6);
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  z-index: 9998;
}
.applywrap{
  background: #fff;
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 9999;
  font-size: 30rpx;
}

.applyinp{
  height: 100rpx;
  line-height: 100rpx;
  border-top: 1rpx solid #dfdfdd;
  position: relative;
  padding-left: 220rpx;
  padding-right: 20rpx;
}
.applyser{
  padding-left: 160rpx;
}
.remark{
  padding: 0rpx;
  padding-left: 120rpx;
  height: 200rpx;
  line-height: 50rpx;
}
.remark text{
  line-height: 70rpx;
}
.remark textarea{
  width: 100%;
  height: 100%;
}
.applyinp text{
  position: absolute;
  left: 20rpx;
  top: 0;
  display: block;
}
.applyinp input{
  width: 100%;
  height: 100%;
}
.getmoney{
  padding-top: 16rpx;
  padding-left: 0;
}
.getmoney view{
  display: block;
  line-height: 45rpx;
  text-align: right;
  font-size: 28rpx;
}
.getmoney .getpaymoney{
  font-size: 34rpx;
}
.getmoney .getpaymoney font{
  font-size: 32rpx;
  color: #b7070a;
}

.applybtn{
  padding: 0;
}
.applybtn button{
  background: #ff2741;
  color: #fff;
  width: 100%;
  height: 100%;
}


.cont scroll-view{
  padding-top:110rpx;
  position:absolute;
  bottom:0;
  left:0;
  right:0;
  top:0;
  z-index: -1;
}