/* pages/mine/collection/collection.wxss */
page{
  background: #f5f8fa;
}
.coll_top{
  background: #fff;
  position: relative;
  padding: 20rpx;
  margin-bottom: 20rpx;
}
.coll_top_left{
  display: inline-block;
  color: #2e2d2d;
  font-size: 30rpx;
}
.coll_top_left image{
  width:40rpx;
  vertical-align: middle;
  margin-right: 20rpx;
}

.coll_top_right{
  display: inline-block;
  position: absolute;
  right: 20rpx;
  top: 20rpx;
}


.coll_list{
  margin-bottom: 0;
  border-bottom: 1px solid #f5f8fa;
}
.coll_img_box{
  width: 130rpx;
  height: 130rpx;
  line-height: 130rpx;
  border-radius: 50%;
  background: #f5f8fa;
  display: inline-block;
  vertical-align: middle;
  text-align: center;
}
.coll_img_box image{
  width: 80rpx;
  margin: 0 auto;
}
.coll_text_box{
  display: inline-block;
  vertical-align: middle;
  padding-left: 20rpx;
}
.coll_text_weight{
  font-weight: bold;
}
.coll_text_box .coll_text_tip{
  font-size: 24rpx;
  color: #a2a0a0;
  margin-top: 10rpx;
}
.coll_text_right{
  top: 40%;
  color: #a2a0a0;
}

.shop_address_icon{
  width: 24rpx;
  margin-right: 10rpx;
  vertical-align: middle;
}

/* 地图 */
map {
  width: 100%;
  height: 500rpx;
}

/* 店铺介绍 */
.shop_main_box{
  background: #fff;
  margin-top: 20rpx;
  padding: 30rpx;
  position: relative;
  padding-right: 220rpx;
}
.shop_main_tt_line{
  font-size: 34rpx;
  font-weight: bold;
}
.shop_main_tt_line text{
  display: inline-block;
  width: 11rpx;
  height: 29rpx;
  background: #d0382c;
  vertical-align: middle;
  margin-right: 16rpx;
  margin-top: -4rpx;
}
.shop_main_text{
  color: #a2a0a0;
  margin-top: 20rpx;
  line-height: 1.15rem;
  padding-left: 20rpx;
}
.shop_main_code{
  position: absolute;
  right: 40rpx;
  top: 70rpx;
  color: #d0382c;
  text-align: center;
}
.shop_main_code image{
  width: 110rpx;
  margin-bottom: 6rpx;
}

/* 热销好货 */
/* 单个图片容器的样式 */
.goods-wrap{
  width: 96%;
  margin: 0 auto;
  padding-bottom: 90rpx;
}
.goods-tips-wrap{
  width: 100%;
  position: relative;
  margin: 60rpx auto 30rpx auto;
  border-bottom: 1rpx solid #d1d2d6;
}
.goods-tips{
  width: 100%;
  position: absolute;
  left: 0;
  top: -25rpx;
  text-align: center;
}
.goods-tips text{
  font-size: 28rpx;
  color: #adaeb0;
  background: #f5f8fa;
  padding: 0 15rpx;
}

.mg_item {
  /* width: 48.5%; */
  width: 50%;
  margin: 0rpx;
  display: inline-block;
  vertical-align: top;
  background-color: #f5f8fa;
  font-size: 24rpx;
  box-sizing: border-box;

}
.mg_item1{
  padding-right: 16rpx;
  /* float: left; */
}
.mg_item2{
  padding-left: 16rpx;
  /* float: right; */
}
.mall-pro{
  background: #fff;
  margin-bottom: 16rpx;
  padding-bottom: 20rpx;
}

.item_info{
  /* border-top:1px dashed red; */
}
.product-name{
  color: #000;
  text-align:left;
  margin: 10rpx; 
  /* margin-bottom: 5rpx;  */
}
.product-cont{
  width: 100%;
  color: #5d5d5d;
  text-align:left;
  margin: 10rpx; 
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2;
  overflow: hidden;
  text-overflow:ellipsis;
}
.product-price-wrap{
  /* margin-bottom: 40rpx; */
}
.product-price-wrap .product-price-new{
  color: #fe2349;
  margin-left:10rpx;
  /* font-weight:900; */
  font-size: 30rpx;
}
.product-price-wrap .product-price-old{
  color: #868686;
  text-decoration: line-through;
  padding-left: 20rpx;
}


/* 进入店铺 */
.come_in_shop{
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  background: #ff2741;
  color: #fff;
  font-size: 32rpx;
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
}