/* pages/mine/setaddress/setaddress.wxss */
.applyinp:first-child{
  border-top: 0;
}
.applyinp{
  height: 100rpx;
  line-height: 100rpx;
  border-top: 1rpx solid #dfdfdd;
  position: relative;
  padding-left: 160rpx;
  padding-right: 20rpx;
  font-size: 30rpx;
}
.addressCity{
  padding-left: 130rpx;
}
.addressphone{
  padding-left: 180rpx;
}
.applyinp text{
  position: absolute;
  left: 20rpx;
  top: 0;
  display: block;
}
.applyinp input{
  width: 100%;
  height: 100%;
  font-size: 30rpx;
}

.applybtn{
  padding: 0;
}
.applybtn button{
  background: #ff2741;
  color: #fff;
  width: 90%;
  height: 100rpx;
  margin: 40rpx auto;
  border-radius: 10rpx;
}

.radiomoren{
  padding-left: 20rpx;
  position: relative;
}

.addressDel{
  position: absolute;
  right: 20rpx;
  top: 0;
  color: #666;
  font-size: 26rpx;
}