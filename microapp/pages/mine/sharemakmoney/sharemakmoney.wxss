/* pages/mine/sharemakmoney/sharemakmoney.wxss */

page{
  background: #f5f8fa;
}
image{
  width: 100%;
}

.share_nav_wrap{
  padding: 24rpx;
  padding-top: 20rpx;
}
.goods-tips-wrap{
  width: 100%;
  position: relative;
  margin: 40rpx auto 50rpx auto;
  border-bottom: 1rpx solid #d1d2d6;
}
.goods-tips{
  width: 100%;
  position: absolute;
  left: 0;
  top: -20rpx;
  text-align: center;
}
.goods-tips text{
  font-size: 28rpx;
  color: #adaeb0;
  background: #f5f8fa;
  padding: 0 15rpx;
}

.share_nav_box{
  padding: 20rpx 0 40rpx 0;
  text-align: center;
}
.share_nav_li{
  display: inline-block;
  vertical-align: middle;
  color: #555556;
  font-size: 24rpx;
}
.share_nav_icon{
  min-height: 104rpx;
}
.share_nav_li image{
  width: 60rpx;
  margin-bottom: 20rpx;
}
.share_nav_icon02 image{
  width: 74rpx;
}
.share_nav_arrow_right{
  display: inline-block;
  vertical-align: middle;
  margin: 0 20rpx;
}
.share_nav_arrow_right image{
  width: 32rpx;
  margin-bottom: 40rpx;
}


/* 详细规则 */
.share_details_rule{
  background: #fff;
  margin-top: 40rpx;
  padding: 30rpx;
  padding-bottom: 70rpx;
}
.shop_main_tt_line{
  font-size: 32rpx;
  font-weight: bold;
  display: inline-block;
  color: #292d33;
  margin-bottom: 30rpx;
}
.shop_main_tt_line text{
  display: inline-block;
  width: 11rpx;
  height: 30rpx;
  background: #d0382c;
  vertical-align: middle;
  margin-right: 16rpx;
  margin-top: -4rpx;
}
.share_d_p view{
  font-size: 26rpx;
  color: #a2a0a0;
  margin-bottom: 30rpx;
  line-height: 44rpx;
}


/* 同意 */
.share_radio_wrap{
  padding: 40rpx 30rpx;
  color: #a2a0a0;
  font-size: 24rpx;
  padding-bottom: 140rpx;
}
checkbox .wx-checkbox-input{
    width: 35rpx; /* 背景的宽 */
    height: 35rpx; /* 背景的高 */
    background: transparent;
    vertical-align: middle;
    margin-top: -4rpx;
} 
radio .wx-radio-input{
  width: 35rpx; /* 背景的宽 */
  height: 35rpx; /* 背景的高 */
  background: transparent;
  vertical-align: middle;
  margin-top: -4rpx;
}
.share_radio_wrap text{
  color: #c92f23;
}


/* footer */
.share_mk_btn_box {
  width: 100%;
  position: fixed;
  bottom: 0;
  height: 100rpx;
  z-index: 99;
  background-color: #FFF;
  border-top: 1px solid #E5E5E5;
}
.share_mk_btn {
  height: 100rpx;
  font-size: 28rpx;
  line-height: 100rpx;
  text-align: center;
  color: #FFF;
  background: #ff2741;
}


/* 申请加入弹框 */
.Applyalert{
  background: rgba(0, 0, 0, 0.6);
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  z-index: 9998;
}
.applywrap{
  background: #fff;
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 9999;
  font-size: 30rpx;
}
.applytitle{
  color: #ff2741;
  text-align: center;
  line-height: 80rpx;
}
.applyinp{
  height: 100rpx;
  line-height: 100rpx;
  border-top: 1rpx solid #dfdfdd;
  position: relative;
  padding-left: 160rpx;
  padding-right: 20rpx;
}
.applyinp text{
  position: absolute;
  left: 20rpx;
  top: 0;
  display: block;
}
.applyinp input{
  width: 100%;
  height: 100%;
}

.applybtn{
  padding: 0;
}
.applybtn button{
  background: #ff2741;
  color: #fff;
  width: 100%;
  height: 100%;
}