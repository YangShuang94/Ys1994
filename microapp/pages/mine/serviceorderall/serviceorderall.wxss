/* pages/mine/orderall/orderall.wxss */

.order-head-nav{
  border-bottom: 1px solid #d9d9d9;
  padding: 0 20rpx;
}
.order-nav{
  display: inline-block;
  font-size: 32rpx;
  padding: 30rpx 30rpx;
  border-bottom: 3px solid #fff;
  margin: 0 10rpx;
  position: relative;
}
.navactive{
  color: #d81e06;
  border-bottom: 3px solid #d81e06;
}
.nav-num{
  width: 30rpx;
  height: 30rpx;
  line-height: 30rpx;
  text-align: center;
  font-size: 20rpx;
  border-radius: 50%;
  border: 1px solid #d84959;
  color: #d84959;
  display: inline-block;
  position: absolute;
  right: 0;
  top: 0;
}

.order-list-box{
  margin: 20rpx 0 50rpx 0;
}
.order-time{
  font-size: 28rpx;
  padding: 20rpx 10rpx;
  color: #444;
  border-bottom: 1px solid #f1f1f1;
}
.order-time text{
  float: right;
  color: #636363;
}

.order-info{
  position: relative;
  padding: 20rpx;
  padding-left: 190rpx;
  padding-right: 150rpx;
  min-height: 150rpx;
}
.order-img{
  width: 140rpx;
  max-height: 150rpx;
  overflow: hidden;
  position: absolute;
  left: 20rpx;
  top: 20rpx;
}
.order-img image{
  width: 140rpx;
  height: 150rpx;
}
.order-info-t{
  font-size: 28rpx;
}
.order-info-main{
  position: absolute;
  right: 20rpx;
  top: 20rpx;
  text-align: right;
  color: #4d4d4d;
  font-size: 26rpx;
}
.order-info-main .order-total{
  color: #858585;
  font-size: 24rpx;
}

.order-get-time{
  text-align: right;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #ff9800;
  padding-bottom: 20rpx;
  border-bottom: 1px solid #e8e8e8;
}

.order-money{
  text-align: right;
  padding: 0 20rpx;
}
.order-m-n{
  color: #666;
  font-size: 26rpx;
  padding: 20rpx 0;
}
.order-m-n text{
  color: #d81e06;
  font-weight: bold;
}

.order-btn{
  padding: 10rpx 30rpx;
  border: 1px solid #bbbbbb;
  border-radius: 40rpx;
  color: #5e5e5e;
  margin-left: 20rpx;
  display: inline-block;
  font-size: 28rpx;
  margin-top: 10rpx;
}
.order-btn-red{
  color: #fff;
  background: #e82050;
  border: 1px solid #e82050;
}


.cont scroll-view{
  padding-top:110rpx;
  position:absolute;
  bottom:0;
  left:0;
  right:0;
  top:0;
  z-index: -1;
}

.doortime{
  margin-top: 16rpx
}
.remark{
  margin-top: 16rpx
}