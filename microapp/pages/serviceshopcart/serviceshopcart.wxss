/* pages/serviceshopcart/serviceshopcart.wxss */
.border-site {
	display: block;
	background: url('data:image/png;base64,') bottom  repeat-x #fff;
	background-size: 40px 2px;
}
.opt-row {
	padding: 10px 15px;
	position: relative;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	align-items: center;
	line-height: 24px;
}
.opt-row input{
  width: 75%;
}


.opt-row:after {
	content: " ";
	position: absolute;
	left: 10px;
	bottom: 0;
	right: 0;
	height: 1px;
	border-bottom: 1rpx solid #f3f3f3;
	color: #f3f3f3;
}

.group .opt-row:last-child:after {
	border: none;
}

.opt-row .opt-row_hd text{
	font-size: 12px;
}

.opt-row .opt-row_bd {
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	flex: 1;
	text-align: right;
}
.opt-row .opt-row_bd .weui-input .i-opt {
	font-size: 12px;
	color: #ccc;
	margin-left: 10px;
}

.opt-row .opt-row_ft {
	color: #ccc;
	font-size: 12px;
	margin-left: 10px;
}

.opt-row .opt-row_bd .weui-input .i-wx-pay{
	display: inline-block;
	font-size: 14px;
	margin-right: 5px;
}

/* 底部弹窗 */
.pop-invoice{
	box-sizing: border-box;
	padding:0px 10px;
}

.pop-invoice .pop-bartit{
	font-size: 16px;
	font-weight: 600;
	line-height: 30px;
}

.pop-invoice .pop-smtit{
	margin-top:15px;
	margin-bottom:10px;

}
.pop-invoice .pop-smtit text{
	font-size:12px;
	color: #999;
}

.pop-invoice .pop-note{
	font-size:12px;
	color: #999;
	margin-bottom:10px;
}

.pop-invoice .pop-opt{
	margin-bottom: 10px;
}
.pop-invoice .pop-opt .pop-opt_btn{
	display: inline-block;
	border: 1px solid #e5e5e5;
	padding: 3px 15px;
	margin-right: 15px;
	border-radius: 15px;
}

.pop-invoice .pop-input{
	border-radius:18px;
	background-color:#f3f3f3;
	margin-top:15px;
	padding:5px 15px;
}
