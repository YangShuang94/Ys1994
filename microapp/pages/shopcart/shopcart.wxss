/* pages/shopcart/shopcart.wxss */
page {

  height: 100%;
  background: #fff;
  font-family: -apple-system-font, Arial, Helvetica, sans-serif;
  color: #333;
  font-size: 32rpx;
  line-height: 1.42857;
}

.cartcontainer {
  width: 100%;
  min-height: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}


/* 地址 */
.cartaddress{
  position: relative;
  font-size: 30rpx;
  padding: 20rpx 190rpx 30rpx 30rpx;
  border-bottom: 1rpx solid #f1f1f1;
  margin-bottom: 30rpx;
  overflow: hidden;
}
.cartaddress>view{
  margin-top: 10rpx;
  color: #000;
}
.cartaddress .addttcolor{
  color: #666;
  margin-bottom: 12rpx;
}
.addressicon01{
  width: 25rpx;
  vertical-align: middle;
  margin-right: 10rpx;
  margin-top: -8rpx;
}
.redcity{
  color: red;
}
.cartaddress .otheraddress{
  position: absolute;
  right: 20rpx;
  top: 45%;
  color: #fbb304;
}

.section {
  display: flex;
  flex-direction: column;
  margin-bottom: 30rpx;
}

.section-good {
  margin-bottom: 100rpx;
}

.good {
  float: left;
  width: 100%;
  height: 300rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  border-bottom: 1px solid #f1f1f1;
  background-color: #fff;
}

/*  第一个盒子  */
.good .good_title {
  /* float:left; */
  box-sizing:border-box;
  width:100%;
  height:70rpx;
  line-height:70rpx;
  border-bottom:1px solid #f1f1f1;
  padding: 0 20rpx;
}
.good .good_title view:first-of-type {
  float: left;
  font-size: 28rpx;
}
.good .good_title .fhtime {
  float: right;
}
.fhtime{
  border-radius: 40rpx;
  background: #fbb304;
  opacity: 0.8;
  color: #fff;
  font-size: 26rpx;
  text-align: center;
  line-height: 50rpx;
  height: 50rpx;
  padding: 0 20rpx;
}
/* 删除 */
.good_content .good_footer .shanchu_trash {
  height: 56rpx;
  font-size: 24rpx;
  text-align: right;
  color: #666;
}

/* 第二个盒子  */
.good .good_content {
  box-sizing: border-box;
  /* float:left; */
  width:100%;
  height:226rpx;
  padding: 0 20rpx;
  overflow: hidden;
  position: relative;
}


.good_content .good:last-child {
  border-bottom: none;
}

.good_content .good_checkbox {
  float:left;
  width:70rpx;
  height:224rpx;
  line-height: 224rpx;
}


.good_content .checkbox {
  float: left;
  width: 48rpx;
  height: 48rpx;
}

.good_content .good_img {
  float:left;
  margin-top:16rpx;
  width:150rpx;
  height:180rpx;
  background: #f1f1f1;
}
.good_content .good_img image {
  width: 150rpx;
  height: 180rpx;
}

.good_content .content {
  box-sizing: border-box;
  float:left;
  margin-top:16rpx;
  margin-left:20rpx;
  width:324rpx;
  height:90rpx;

}

.good_content .content .titles {
  text-overflow:ellipsis;
  overflow:hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size:15px;
  height:86rpx;
  color:#000;
  line-height: 44rpx;
  margin-top: 20rpx;
}

.good_content .good_footer {
  box-sizing:border-box;
  margin-top:16rpx;
  /* width:250rpx; */
  height:90rpx;
  position: absolute;
  right: 0;
  top: 0;
  padding-right: 20rpx;
}



.good_content .good .yxstepper {
  width: 162rpx;
  height: 50rpx;
}

.price {
  margin-top:36rpx;
  color:#e83632;
  font-size:34rpx;
}
.price text{
  color: black;
}
.good_content .good_footer .saleprice{
  height: 34rpx;
  color: #FF5501;
  font-size:24rpx;
  text-align: right;
}

.good_content .good_footer .yxstepper {
  margin-top: 10rpx;
} 


.good_content .yxstepper .yxadd, .yxstepper .subtract {
  float: left;
  width: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  font-size: 28rpx;
  /* border: 1px solid #ccc; */
  box-sizing: border-box;
}
.subtract{
  border: 1px solid #dfdfdd;
  border-right: none;
  border-radius: 10rpx 0 0 10rpx;
}
.yxadd{
  border: 1px solid #dfdfdd;
  border-left: none;
  border-radius: 0 10rpx 10rpx 0;
}

.good_content .yxstepper .disabled {
  float: left;
  /* color: #eee; */
}

.good_content .yxstepper .count {
    float: left;
  width: 60rpx;
  height: 50rpx;
  line-height: 50rpx;
  border: 1px solid #dfdfdd;
  /* border-top: 1px solid #ccc;
  border-bottom: 1px solid #ccc; */
  text-align: center;
  box-sizing: border-box;
  min-height: 1rem;
  font-size: 28rpx;
}


/*******底部********************************************  */
.section-bottom {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  height: 100rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  margin-bottom: 0;
  background-color: #fff;
  box-sizing: border-box;
  z-index: 99;
  border-top: 1rpx solid #f1f1f1;
}

.section-bottom .btn {
  width: 160rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  color: #fdfffd;
  background-color: #fbb304;
}

.section-bottom .btn-default {
  color: #666;
  background-color: #eee;
}

.section-bottom .btn-primary {
  color: #fdfffd;
  background-color: #e83632;
}

.section-bottom .checkbox-allcheck {
  display: inline-block;
  margin-left: 30rpx;
  vertical-align: top;
  font-size: 0px;
}

.section-bottom .check-all-text {
  display: inline-block;
  vertical-align: top;
  margin-left: 10rpx;
  height: 23px;
  line-height: 23px;
  font-size: 28rpx;
}

.section-bottom .total {
  flex: 1;
  text-align: right;
  font-size: 26rpx;
  padding: 0 20rpx;
}

.total .totalCount {
  font-size: 26rpx;
}

.total .totalPrice {
  font-size: 26rpx;
}

.total .totalCount text {
  color: #e83632;
  vertical-align: middle;
}

.total .totalPrice text {
  color: #e4452a;
  font-size: 36rpx;
  vertical-align: middle;
}


/*   空购物车  */
.cartList {  
  padding: 100px 0 0 0;  
